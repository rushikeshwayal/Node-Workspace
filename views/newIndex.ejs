<!DOCTYPE html>
<html lang="en">

    <%-include('./partials/head.ejs') %>   

<body>

  <%- include('./partials/nav.ejs') %>

    <div class="blog-content content">
        <h2>All Blogs</h2>
       <% if (blogs.length > 0) { %>
    <% blogs.forEach(blog => { %>
        <div class="blog-post">
            <h3 class="title"><%= blog.title %></h3>
            <p class="snippet"><%= blog.snippet %></p>
        </div>
    <% }); %>
<% } else { %>
    <p>No blogs available.</p>
<% } %>

<%- include('./partials/footer.ejs') %>

    </div>
</body>
</html>